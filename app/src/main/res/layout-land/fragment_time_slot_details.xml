<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimeSlotDetailsFragment"
    android:theme="@style/Theme.Tymes">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="51dp">


        <TextView
            android:id="@+id/ad_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="TYMES AD"
            android:textColor="@color/grey_appbar"
            android:textSize="48dp"
            android:textStyle="bold"
            android:shadowColor="@color/grey_appbar"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ad_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Available"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="24dp"
            android:shadowColor="@color/green"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="6"
            android:letterSpacing="0.4"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_type" />

        <Button
            android:id="@+id/btn_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Now!"
            android:textStyle="bold"
            android:letterSpacing="0.2"
            android:visibility="visible"
            android:textColor="@color/grey_appbar"
            android:backgroundTint="@color/dark_golden"
            android:shadowColor="@color/grey_appbar"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="4"
            android:layout_marginVertical="8dp"
            app:layout_constraintTop_toBottomOf="@id/ad_availability"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/ad_skill_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text=":Service:"
            android:textColor="@color/grey_appbar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/stream_roboto_medium"
            android:letterSpacing="0.2"
            android:shadowColor="@color/grey_appbar"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="6"
            app:layout_constraintBottom_toTopOf="@+id/ad_skill"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_rating" />

        <TextView
            android:id="@+id/ad_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:text="Kotlin Programming"
            android:textColor="@color/grey_appbar"
            android:fontFamily="@font/stream_roboto_regular"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_author_const"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_skill_const" />

        <TextView
            android:id="@+id/ad_author_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text=":By:"
            android:textColor="@color/grey_appbar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/stream_roboto_medium"
            android:letterSpacing="0.2"
            android:shadowColor="@color/grey_appbar"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="6"
            app:layout_constraintBottom_toTopOf="@+id/ad_author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_skill" />

        <TextView
            android:id="@+id/ad_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:text="Davide Tymes"
            android:textColor="@color/grey_appbar"
            android:fontFamily="@font/stream_roboto_regular"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_description_const"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_author_const" />

        <TextView
            android:id="@+id/ad_description_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Description"
            android:textColor="@color/grey_appbar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/stream_roboto_medium"
            android:letterSpacing="0.2"
            android:shadowColor="@color/grey_appbar"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="6"
            app:layout_constraintBottom_toTopOf="@+id/ad_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_author" />


        <TextView
            android:id="@+id/ad_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:text="Description"
            android:textColor="@color/grey_appbar"
            android:fontFamily="@font/stream_roboto_regular"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_price_const"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_description_const" />

        <TextView
            android:id="@+id/ad_price_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=":Bid (TYC):"
            android:textColor="@color/grey_appbar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/stream_roboto_medium"
            android:letterSpacing="0.2"
            android:shadowColor="@color/grey_appbar"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="6"
            app:layout_constraintBottom_toTopOf="@+id/ad_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_description" />

        <TextView
            android:id="@+id/ad_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="10.00"
            android:textColor="@color/dark_orange"
            android:fontFamily="@font/stream_roboto_medium"
            android:layout_marginTop="4dp"
            android:textSize="28sp"
            android:shadowColor="@color/dark_orange"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="8"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/ad_location_const"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_price_const" />

        <TextView
            android:id="@+id/ad_location_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:text=":Where:"
            android:textColor="@color/grey_appbar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/stream_roboto_medium"
            android:letterSpacing="0.2"
            android:shadowColor="@color/grey_appbar"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="6"
            app:layout_constraintBottom_toTopOf="@+id/ad_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_price" />

        <TextView
            android:id="@+id/ad_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:text="Turin"
            android:textColor="@color/grey_appbar"
            android:fontFamily="@font/stream_roboto_regular"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/ad_date_const"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_location_const" />

        <TextView
            android:id="@+id/ad_date_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=":On:"
            android:textColor="@color/grey_appbar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/stream_roboto_medium"
            android:letterSpacing="0.2"
            android:shadowColor="@color/grey_appbar"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="6"
            app:layout_constraintBottom_toTopOf="@+id/ad_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_location" />

        <TextView
            android:id="@+id/ad_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="7:46 AM - April 27, 2022"
            android:textColor="@color/grey_appbar"
            android:fontFamily="@font/stream_roboto_regular"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_date_const" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>