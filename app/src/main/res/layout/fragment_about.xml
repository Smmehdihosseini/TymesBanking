<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_appbar"
    tools:context=".aboutFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tymes_about_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tymes"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:gravity="center"
            android:textStyle="bold"
            android:letterSpacing="0.5"
            android:shadowColor="@color/white"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="20"
            android:fontFamily="@font/stream_roboto_regular"
            android:layout_marginTop="128dp"
            app:layout_constraintBottom_toTopOf="@id/tymes_about_version"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tymes_about_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1.28.45"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:letterSpacing="0.5"
            android:fontFamily="@font/stream_roboto_regular"
            app:layout_constraintTop_toBottomOf="@id/tymes_about_text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tymes_about_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed By Group 28"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/stream_roboto_regular"/>

            <TextView
                android:id="@+id/tymes_about_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAD Course 2021/2022"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/stream_roboto_regular"/>

            <TextView
                android:id="@+id/tymes_about_uni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Politecnico Di Torino"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/stream_roboto_regular"/>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>