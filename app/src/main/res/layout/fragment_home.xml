<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_appbar"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_balance_const"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="36dp"
            android:text="Your Balance:"
            android:fontFamily="@font/stream_roboto_medium"
            android:textSize="24sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:textColor="@color/grey"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/home_tyc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:text="0.00"
            android:fontFamily="@font/stream_roboto_medium"
            android:textSize="64sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:shadowColor="@color/grey"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            app:layout_constraintTop_toBottomOf="@id/home_balance_const"/>

        <TextView
            android:id="@+id/home_tyc_const"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:text="TYC"
            android:fontFamily="@font/stream_roboto_medium"
            android:textSize="24sp"
            android:gravity="center"
            android:textAllCaps="true"
            android:letterSpacing="0.1"
            android:textColor="@color/dark_golden"
            android:textStyle="bold"
            android:shadowColor="@color/dark_golden"
            android:shadowDx="0.0"
            android:shadowDy="0.0"
            android:shadowRadius="10"
            app:layout_constraintTop_toBottomOf="@id/home_tyc"/>

            <Button
                android:id="@+id/home_tyc_withdraw"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/dark_red"
                android:text="WITHDRAW"
                android:fontFamily="@font/stream_roboto_medium"
                android:textColor="@color/grey_appbar"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:gravity="center"
                android:shadowColor="@color/grey_appbar"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="12"
                app:layout_constraintTop_toBottomOf="@id/home_tyc_const"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/home_tyc_charge"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/dark_blue"
                android:text="Charge"
                android:fontFamily="@font/stream_roboto_medium"
                android:textColor="@color/grey_appbar"
                android:textStyle="bold"
                android:letterSpacing="0.2"
                android:gravity="center"
                android:shadowColor="@color/grey_appbar"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="12"
                app:layout_constraintTop_toBottomOf="@id/home_tyc_withdraw"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- TODO: Update blank fragment layout -->

</ScrollView>